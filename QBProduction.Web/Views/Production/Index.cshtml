@model IEnumerable<QBProduction.Web.Models.BomRun>

@{
    ViewBag.Title = "Production Overview";
}

<div class="row">
    <div class="col-md-12">
        <h2>Production Batches</h2>
        <div class="mb-3">
            @Html.ActionLink("Start New Production", "StartProduction", "Production", null, new { @class = "btn btn-success" })
            @Html.ActionLink("View All Batches", "BatchListing", "Production", null, new { @class = "btn btn-primary" })
        </div>

        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Batch Reference</th>
                    <th>Production Item</th>
                    <th>Quantity Produced</th>
                    <th>Total Value</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.bomrunref</td>
                            <td>@item.productionitem</td>
                            <td>@item.totalqtyproduced.ToString("N2") @item.uom</td>
                            <td>$@item.totalvalue.ToString("N2")</td>
                            <td>@item.bomrundate.ToString("MM/dd/yyyy")</td>
                            <td>
                                @switch (item.batchstatus)
                                {
                                    case "Completed":
                                        <span class="badge bg-success">Completed</span>
                                        break;
                                    case "Pending":
                                        <span class="badge bg-warning">Pending</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@item.batchstatus</span>
                                        break;
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Details", "BatchDetails", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">No production batches found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
