@model IEnumerable<QBProduction.Web.Models.Boms>

@{
    ViewBag.Title = "Bill of Materials";
}

<div class="row">
    <div class="col-md-12">
        <h2>Bill of Materials Management</h2>
        <div class="mb-3">
            @Html.ActionLink("Create New BOM", "Create", "Bom", null, new { @class = "btn btn-primary me-2" })
            @Html.ActionLink("Load from QuickBooks", "LoadNew", "Bom", null, new { @class = "btn btn-info" })
        </div>

        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>BOM Name</th>
                    <th>Assembly Item</th>
                    <th>UOM</th>
                    <th>Created On</th>
                    <th>Modified On</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.bomname</td>
                            <td>@item.assemblyitem</td>
                            <td>@item.uom</td>
                            <td>@item.createdon.ToString("MM/dd/yyyy")</td>
                            <td>@item.modifiedon.ToString("MM/dd/yyyy")</td>
                            <td>
                                @if (item.isactive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">No BOMs available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
